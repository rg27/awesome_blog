<% provide(:title, "Show")%>
<div class="row">
	<div class="col-4">
		<div class="card mt-4 mr-auto">
			<div class="card-header">
				User Information
			</div>
			<div class="card-body">
				<div class="text-center">
					<%= profile_image(@user, "profile-big")%>
				</div>
				<div class="mx-auto text-center">
					<h5 class="card-title"><%= @user.name%></h5>
					<p class="card-text"> <%= @user.email%></p>
				</div>
			</div>
		</div>
		
		<%= button_to "Unfollow","#"%> 
		<%if current_user%>
			<%= button_to "Follow", relationships_path, params: {followed_id: @user.id} %> 
		<%end%>
	</div>

	<div class="col-8">
		<div class="card mt-4 ml-auto">
			<div class="card-header">
				Activity Feeds
			</div>
				<% @user.posts.each do |u| %>
					<div class="media mt-4 p-lg-2">
						<%= profile_image(@user, "profile-big" )%>
						<div class="media-body ml-2 mt-2">
							<h4><%= u.user.email%> </h4>
							<p><%= u.content%> </p>
						</div>
						<%= link_to "Delete", post_path(u.id), method: :delete, class:"btn btn-danger", data: {confirm:"Are you sure you want to delete?"}%>
					</div>
				<%end%>
			</div>
		</div>
	</div>
</div>


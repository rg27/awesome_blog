<% provide(:title, "Homefeed")%>
<div class="row">
	<div class="col-4">
		<div class="mt-4 mr-auto card">
			<div class="card-header">
				User Information
			</div>
			<div class="card-body">
				<div class="text-center">
					<%= profile_image(current_user, "profile-big")%>
				</div>
				<div class="mx-auto text-center">
					<h5 class="card-title"><%= current_user.name%></h5>
					<p class="card-text"> <%= current_user.email%></p>
				</div>
			</div>
            <div class="card-footer">
                <%= render "posts/form"%>
            </div>
		</div>
	</div>

    <div class="col-8">
		<div class="mt-4 ml-auto card">
			<div class="card-header">
				Activity Feeds
			</div>
				<% @posts.each do |u| %>
					<div class="mt-4 media p-lg-2">
						<%= profile_image(current_user, "profile-big" )%>
						<div class="mt-2 ml-2 media-body">
							<h4><%= u.user.email%> </h4>
							<p><%= u.content%> </p>
						</div>
						<%= link_to "Delete", post_path(u.id), method: :delete, class:"btn btn-danger", data: {confirm:"Are you sure you want to delete?"}%>
					</div>
					<hr class="mt-2 mb-2"/>
				<%end%>
			</div>
			<div class="mt-4 pagination justify-content-center">
				<%= will_paginate @posts%>
			</div>
		</div>
	</div>
</div>


<div>
    <%= form_for @post do |f| %>
        <div class="form-group">
            <%= f.text_area :content, size:"20x5", class: "form-control", placeholder: "Share your thoughts..." %>
        </div>
        <div class="form-group">
            <%= f.file_field :image %>
        </div>
           <%= f.submit "Post", class: "btn btn-primary btn-block mt-2"%>
    <%end%>
</div>